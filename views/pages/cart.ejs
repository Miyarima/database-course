        <th class="th">Order id</th>
        <th class="th">Produkt id</th>
        <th class="th">Antal</th>
        <th class="th">Pris</th>
    </tr>
    <% for (const row of products) { %>
        <tr>
            <td class="td"><%= row.order_id %></td>
            <td class="td"><%= row.produkt_id %></td>
            <td class="td"><%= row.antal %></td>
            <td class="td"><%= row.pris %> kr</td>
        </tr>
    <% }; %>
</table>

