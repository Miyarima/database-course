        <tr>
            <td class="td"><%= row.id %></td>
            <td class="td"><%= row.namn %></td>
            <td class="td"><%= row.hylla %></td>
            <td class="td"><%= row.antal %></td>
            <td class="td">
                | <a href="/eshop/stock/edit/<%= row.id %>&<%= row.hylla %>">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    <% }; %>
</table>

